program DZ3;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;
type Citizen = object
    private FIO: string[25];
    private birthday_year: integer;
    public procedure Init(f: string; year:integer);
    public procedure Print;
    public function age: integer;
end;
procedure Citizen.Init;
  begin
    FIO := f;
    birthday_year := year;
  end;
procedure Citizen.Print;
    begin
      writeln('ФИО: ', FIO);
      writeln('Год рождения: ', birthday_year);
    end;
function Citizen.age: integer;
  begin
    Result := 2021 - birthday_year;
  end;
type Recruit = object(Citizen)
  private status: boolean;
  public procedure Init(f: string; year: integer; stat: boolean);
  public procedure Print;
  public procedure Category;
  public function summonning: boolean;
end;
procedure Recruit.Init;
  begin
    inherited Init(f, year);
    status := stat;
  end;
procedure Recruit.Print;
  begin
    inherited Print;
    writeln('Годен: ', status);
  end;
procedure Recruit.Category;
  begin
    if (18 <= age) and (age <= 27) then
      status := True
    else
      status := False;
  end;

function Recruit.summonning: boolean;
  begin
    if status then
      Result := True
    else
    Result := False;
  end;
var first, second, third: Recruit;
begin
   first.Init('Пупкин Василий Михайлович', 2000, True);
   first.Category;
   first.Print;
   writeln('Годен к службе: ', first.summonning);
   writeln;

   second.Init('Смирнов Иван Андреевич', 1994, True);
   second.Category;
   second.Print;
   writeln('Годен к службе: ', second.summonning);
   writeln;

   third.Init('Баринов Виктор Петрович', 1974, False);
   third.Category;
   third.Print;
   writeln('Годен к службе: ', third.summonning);
   readln;
end.

