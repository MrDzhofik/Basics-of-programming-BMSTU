program DZ3;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;
type Сar = object
  private mark: string;
  private poe: integer;
  public procedure Init(m: string; p: integer);
  public procedure print;
  public function tax: integer;
end;
function Сar.tax: integer;
  begin
    result := poe * 12;
  end;
procedure Сar.Init;
  begin
    mark := m;
    poe := p;
  end;
procedure Сar.print;
  begin
    writeln('Марка: ', mark);
    writeln('Мощность: ', poe)
  end;
var audi: Сar;
    bmw: Car;
    mercedes: Car;
    volga: Car;

begin
  audi.Init('Audi TT', 210);
  writeln('Транспортный налог: ', audi.tax);
  audi.print;
  bmw.Init('BMW M3', 320);
  writeln('Транспортный налог: ', bmw.tax);
  bmw.print;
  mercedes.Init('Mercedes Mclaren', 500);
  writeln('Транспортный налог: ', mercedes.tax);
  mercedes.print;
  volga.Init('Audi', 210);
  writeln('Транспортный налог: ', audi.tax);
  audi.print;
  readln;
end.
